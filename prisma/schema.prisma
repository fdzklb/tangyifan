generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Blog {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String
  view_count  Int       @default(1)
  date        String
  description String
  categories        String
}

model Subscriber {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  is_subscribed   Boolean @default(true)
}

model Customer {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  phone           String
  last_name       String
  first_name      String
  content         String
  date_created    DateTime @default(now())
}
